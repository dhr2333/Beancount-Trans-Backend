# ==================== Django 核心配置 ====================
# Django 密钥，生产环境必须修改为随机字符串
DJANGO_SECRET_KEY=your-secret-key-here-change-this

# 调试模式，生产环境必须设置为 False
DJANGO_DEBUG=False

# 生产环境需要明确配置允许的域名（逗号分隔）
# DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CSRF 信任的来源（逗号分隔，需包含协议）
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==================== PostgreSQL 数据库配置 ====================
TRANS_POSTGRESQL_DATABASE=beancount-trans
TRANS_POSTGRESQL_USER=postgres
TRANS_POSTGRESQL_PASSWORD=your-strong-password-here
TRANS_POSTGRESQL_HOST=127.0.0.1
TRANS_POSTGRESQL_PORT=5432

# ==================== Redis 配置 ====================
TRANS_REDIS_HOST=127.0.0.1
TRANS_REDIS_PORT=6379
TRANS_REDIS_PASSWORD=your-redis-password-here

# ==================== 存储配置 ====================
# 存储类型: minio / oss / s3
STORAGE_TYPE=minio

# --- MinIO 配置 (默认) ---
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=beancount-trans
MINIO_USE_HTTPS=False

# --- 阿里云 OSS 配置 (可选，当 STORAGE_TYPE=oss 时) ---
# OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your-access-key-id
# OSS_ACCESS_KEY_SECRET=your-access-key-secret
# OSS_BUCKET_NAME=beancount-trans
# OSS_REGION=cn-hangzhou

# --- AWS S3 配置 (可选，当 STORAGE_TYPE=s3 时) ---
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=beancount-trans
# S3_REGION=us-east-1
# S3_USE_SSL=True
# S3_VERIFY_SSL=True

# ==================== CORS 跨域配置 ====================
# 允许的跨域来源（逗号分隔，包含协议和端口）
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==================== JWT 令牌配置 ====================
# JWT 访问令牌有效期（小时），开发环境建议 72，生产环境建议 1
JWT_ACCESS_TOKEN_HOURS=1

# ==================== Traefik/Fava 容器配置 ====================
TRAEFIK_NETWORK=shared-network
FAVA_IMAGE=your-registry/fava-image:latest
BASE_URL=localhost
CERTRESOLVER=myresolver

# ==================== Assets 文件路径 ====================
# 宿主机上 Assets 目录的绝对路径（用于 Docker 挂载）
ASSETS_HOST_PATH=/path/to/your/Assets

# ==================== OAuth 第三方登录配置 (可选) ====================
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
